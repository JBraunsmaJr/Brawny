@page "/Skills"
<PageTitle>Skills</PageTitle>

<MudContainer>
    <MudTabs Centered="true"
             Border="true"
             Elevation="4"
             Color="Color.Info"
             Position="Position.Top"
             Rounded="true"
             Outlined="true"
             IconColor="Color.Secondary">
        <MudTabPanel Icon="@Icons.Filled.Article" Text="Top Skills">
            <MudGrid Spacing="3">
                    <MudItem md="4" sm="12">
                        <MudCard >
                            <SkillCardHeader Title="C#" YearsOfExperience="12"/>
                            <MudCardContent>
                                <MudList Dense="true">
                                    <MudListItem>Mentor / Teach colleagues and fellow students C#</MudListItem>
                                    <MudListItem>Migrated Visual Basic and Web Form applications to Net Core / Net 5+</MudListItem>
                                    <MudListItem>Architected and deployed a Help Desk System built using Net Core 3.1</MudListItem>
                                    <MudListItem>Developed Discord Bots using Net5 and 6 which provide essential community functionality</MudListItem>
                                </MudList>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
            
                    <MudItem md="4" sm="12" lg="3">
                        <MudCard>
                            <SkillCardHeader Title="Python" YearsOfExperience="3"/>
                            <MudCardContent>
                                <MudListItem Dense="true">
                                    <MudListItem>Developed an enterprise API using Flask</MudListItem>
                                    <MudListItem>Leveraged Selenium for end-to-end testing</MudListItem>
                                    <MudListItem>Engineered deployment scripts using a combination of bash, docker, and python</MudListItem>
                                </MudListItem>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
            
                    <MudItem md="4" sm="12" lg="3">
                        <MudCard>
                            <SkillCardHeader Title="NodeJs" YearsOfExperience="3"/>
                            <MudCardContent>
                                <MudList Dense="true">
                                    <MudListItem>Engineered a tool which converts markdown files into PDF. Deployed via docker and implemented as a CI/CD tool</MudListItem>
                                    <MudListItem>Developed Discord Bots</MudListItem>
                                </MudList>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                </MudGrid>            
        </MudTabPanel>
        <MudTabPanel Icon="@Icons.Filled.Navigation" Text="Interests">
            <MudGrid>
                <MudItem>
                    <MudCard>
                        <MudCardHeader><MudText Typo="Typo.h3">Docker</MudText></MudCardHeader>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">
                                Developing applications that are capable of running anywhere is absolutely fascinating. Whether it's a discord bot, or a tool which gets used in CI/CD!
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem>
                    <MudCard>
                        <MudCardHeader><MudText Typo="Typo.h3">C# Development</MudText></MudCardHeader>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">
                                From simple APIs, to procedural generation tools, or anything C#!
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudTabPanel>
    </MudTabs>
</MudContainer>
