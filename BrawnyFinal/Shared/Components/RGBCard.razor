@{
    var classes = "box-shadow dark-background three-d border-radius-18";

    if (IsSelected)
    {
        classes += " rgb";
    }
}
<MudCard Class="@classes">
    <MudCardHeader>
        <MudText Typo="Typo.h3" Color="Color.Secondary">
            @Title
        </MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body1">
            @Text
        </MudText>
    </MudCardContent>
</MudCard>

@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public bool IsSelected { get; set; }
}